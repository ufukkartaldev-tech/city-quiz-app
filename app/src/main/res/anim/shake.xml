<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/overshoot_interpolator">
    
    <!-- Shake left -->
    <translate
        android:duration="50"
        android:fromXDelta="0"
        android:toXDelta="-10" />
    
    <!-- Shake right -->
    <translate
        android:duration="50"
        android:fromXDelta="-10"
        android:startOffset="50"
        android:toXDelta="10" />
    
    <!-- Shake left again -->
    <translate
        android:duration="50"
        android:fromXDelta="10"
        android:startOffset="100"
        android:toXDelta="-10" />
    
    <!-- Shake right again -->
    <translate
        android:duration="50"
        android:fromXDelta="-10"
        android:startOffset="150"
        android:toXDelta="10" />
    
    <!-- Return to center -->
    <translate
        android:duration="50"
        android:fromXDelta="10"
        android:startOffset="200"
        android:toXDelta="0" />
</set>
