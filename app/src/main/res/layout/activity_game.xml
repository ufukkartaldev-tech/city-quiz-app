<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_neon_gradient"
    tools:context=".ui.GameActivity">

    <!-- Top Stats Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/glass_white"
        app:strokeColor="@color/glass_stroke"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"
                android:contentDescription="@string/return_menu" />

            <!-- Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKOR"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_blue" />
            </LinearLayout>

            <!-- Timer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SÃœRE"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_pink" />
            </LinearLayout>

            <!-- Lives -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAN"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/livesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸â¤ï¸â¤ï¸"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Level -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_gradient_success">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEVÄ°YE"
                    android:textSize="8sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/glass_white"
        app:strokeColor="@color/glass_stroke"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/statsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question Number -->
            <TextView
                android:id="@+id/questionNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soru 1/10"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/neon_purple"
                android:layout_marginBottom="12dp" />

            <!-- Question Image -->
            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:contentDescription="Soru gÃ¶rseli"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soru yÃ¼kleniyor..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Answer Buttons -->
    <LinearLayout
        android:id="@+id/answersLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/answerButton1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="A) Cevap 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_answer_button"
            android:layout_marginBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null" />

        <android.widget.Button
            android:id="@+id/answerButton2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="B) Cevap 2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_answer_button"
            android:layout_marginBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null" />

        <android.widget.Button
            android:id="@+id/answerButton3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="C) Cevap 3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_answer_button"
            android:layout_marginBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null" />

        <android.widget.Button
            android:id="@+id/answerButton4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="D) Cevap 4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_answer_button"
            android:layout_marginBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <!-- Joker Buttons (Floating) -->
    <LinearLayout
        android:id="@+id/jokerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jokerFiftyFiftyCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/glass_white"
            app:strokeColor="@color/neon_purple"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50:50"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/jokerFiftyFifty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jokerSkipCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/glass_white"
            app:strokeColor="@color/neon_blue"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ï¸"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/jokerSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jokerGainLifeCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/glass_white"
            app:strokeColor="@color/neon_pink"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸+"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/jokerGainLife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Joker Question Layout (Hidden by default) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/jokerQuestionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/linear_background_secondary"
        app:strokeColor="@color/neon_pink"
        app:strokeWidth="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ CAN KAZANMAK Ä°Ã‡Ä°N CEVAP VER!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/neon_pink"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/jokerQuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joker soru..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/neon_blue"
                app:hintTextColor="@color/text_secondary"
                android:textColorHint="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/jokerAnswerInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CevabÄ±nÄ±zÄ± yazÄ±n"
                    android:textColor="@android:color/white"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/jokerSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CEVAPLA"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/neon_pink"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Sound Toggle (Hidden initially, can be shown) -->
    <TextView
        android:id="@+id/soundToggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="ðŸ”Š"
        android:textSize="24sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>