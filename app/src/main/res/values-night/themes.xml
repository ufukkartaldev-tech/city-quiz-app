<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================ -->
    <!-- MAIN APP THEME (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="Theme.Oyun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors (Dark) -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        
        <!-- Secondary colors (Dark) -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        
        <!-- Error colors (Dark) -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        
        <!-- Background colors (Dark) -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        
        <!-- Status bar (Dark) -->
        <item name="android:statusBarColor">@color/md_theme_dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar (Dark) -->
        <item name="android:navigationBarColor">@color/md_theme_dark_surface</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text appearance (Dark) -->
        <item name="android:textColorPrimary">@color/md_theme_dark_onBackground</item>
        <item name="android:textColorSecondary">@color/md_theme_dark_onSurfaceVariant</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Oyun.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Oyun.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Oyun.LargeComponent</item>
    </style>
    
    <!-- ============================================ -->
    <!-- BUTTON STYLES (Dark Mode Override) -->
    <!-- ============================================ -->
    
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_dark_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="ButtonStyle.Secondary">
        <item name="backgroundTint">@color/md_theme_dark_secondary</item>
        <item name="android:textColor">@color/md_theme_dark_onSecondary</item>
    </style>
    
    <style name="ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_primary</item>
        <item name="strokeColor">@color/md_theme_dark_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- ANSWER BUTTON (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="AnswerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">@color/answer_default</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- ============================================ -->
    <!-- CARD STYLES (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/md_theme_dark_surface</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- TEXT STYLES (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="TextAppearance.Oyun.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onBackground</item>
    </style>
    
    <style name="TextAppearance.Oyun.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onBackground</item>
    </style>
    
    <style name="TextAppearance.Oyun.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_dark_onBackground</item>
    </style>
    
    <style name="TextAppearance.Oyun.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
    </style>
    
    <!-- ============================================ -->
    <!-- EDIT TEXT STYLE (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/md_theme_dark_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/md_theme_dark_primary</item>
    </style>
    
    <!-- ============================================ -->
    <!-- PROGRESS BAR STYLE (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="ProgressBarStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/md_theme_dark_primary</item>
        <item name="trackColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- CHIP STYLE (Dark Mode) -->
    <!-- ============================================ -->
    
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/md_theme_dark_primaryContainer</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>