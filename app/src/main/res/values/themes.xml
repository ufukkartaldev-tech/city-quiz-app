<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================ -->
    <!-- MAIN APP THEME (Light Mode) -->
    <!-- ============================================ -->
    
    <style name="Theme.Oyun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/md_theme_light_onBackground</item>
        <item name="android:textColorSecondary">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Oyun.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Oyun.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Oyun.LargeComponent</item>
    </style>
    
    <!-- ============================================ -->
    <!-- SHAPE APPEARANCES (Köşe Yuvarlaklıkları) -->
    <!-- ============================================ -->
    
    <style name="ShapeAppearance.Oyun.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Oyun.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Oyun.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- BUTTON STYLES (Modern Butonlar) -->
    <!-- ============================================ -->
    
    <!-- Primary Button (Ana Buton) -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Secondary Button (İkincil Buton) -->
    <style name="ButtonStyle.Secondary">
        <item name="backgroundTint">@color/md_theme_light_secondary</item>
    </style>
    
    <!-- Outlined Button (Çerçeveli Buton) -->
    <style name="ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="strokeColor">@color/md_theme_light_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Text Button (Metin Buton) -->
    <style name="ButtonStyle.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>
    
    <!-- ============================================ -->
    <!-- ANSWER BUTTON (Cevap Şıkları) -->
    <!-- ============================================ -->
    
    <style name="AnswerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">@color/answer_default</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- ============================================ -->
    <!-- CARD STYLES (Kartlar) -->
    <!-- ============================================ -->
    
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="CardStyle.Elevated">
        <item name="cardElevation">8dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- TEXT STYLES (Metin Stilleri) -->
    <!-- ============================================ -->
    
    <!-- Headline (Başlık) -->
    <style name="TextAppearance.Oyun.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    
    <!-- Title (Alt Başlık) -->
    <style name="TextAppearance.Oyun.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    
    <!-- Body (Gövde Metni) -->
    <style name="TextAppearance.Oyun.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    
    <!-- Caption (Küçük Metin) -->
    <style name="TextAppearance.Oyun.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    
    <!-- ============================================ -->
    <!-- EDIT TEXT STYLE -->
    <!-- ============================================ -->
    
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>
    
    <!-- ============================================ -->
    <!-- DIALOG THEME (Transparent) -->
    <!-- ============================================ -->
    
    <style name="Theme.Oyun.Transparent" parent="Theme.Oyun">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    
    <!-- ============================================ -->
    <!-- PROGRESS BAR STYLE -->
    <!-- ============================================ -->
    
    <style name="ProgressBarStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/md_theme_light_primary</item>
        <item name="trackColor">@color/md_theme_light_surfaceVariant</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- ============================================ -->
    <!-- CHIP STYLE (Etiketler) -->
    <!-- ============================================ -->
    
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/md_theme_light_primaryContainer</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>